<?xml version="1.0"?>
<project name="bnd">

  <taskdef resource="aQute/bnd/ant/taskdef.properties">
    <classpath>
      <pathelement location="${antlib}/bnd.jar"/>
    </classpath>
  </taskdef>

  <target name="peaberry" depends="compile">
    <mkdir dir="${build}/dist"/>
    <bnd files="peaberry.bnd" classpath="${build}/classes"/>
  </target>

  <target name="testcases" depends="test.compile">
    <mkdir dir="${build}/test"/>
    <bnd files="testcases.bnd" classpath="${build}/test-classes"/>
  </target>

</project>
