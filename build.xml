<?xml version="1.0"?>
<project name="peaberry" default="all">

  <import file="setup/common.xml"/>
  <property file="build.properties"/>

  <target name="guice" depends="check.guice,trim.guice"/>

  <target name="check.guice">
    <available file="${guice.jar}" property="have.guice"/>
  </target>

  <target name="trim.guice" unless="have.guice">
    <taskdef resource="proguard/ant/task.properties" classpath="${proguard.jar}"/>
    <mkdir dir="${dist}"/>
    <proguard>
      -libraryjars "${java.home}/lib/rt.jar"
      -libraryjars "${lib}/aopalliance-${aop.version}.jar"
      -injars "${lib}/guice-${guice.version}.jar"
      -outjars "${guice.jar}"
      -keep class !com.google.inject.internal.collect.** { *; }
      -keepattributes
      -dontobfuscate
      -dontoptimize
      -dontwarn
      -dontnote
    </proguard>
  </target>

  <target name="compile" depends="guice,common.compile"/>

  <target name="with.deps" depends="compile">
    <taskdef name="jarjar" classname="com.tonicsystems.jarjar.JarJarTask" classpath="${jarjar.jar}"/>
    <jarjar jarfile="${build}/classes.jar">
      <fileset dir="${build}/classes"/>
      <zipfileset src="${asm.jar}"/>
      <zipfileset src="${felix.jar}"/>
      <rule pattern="jsr166y.*" result="org.ops4j.peaberry.internal.@1"/>
      <rule pattern="org.objectweb.asm.*" result="org.ops4j.peaberry.internal.@1"/>
      <rule pattern="org.apache.felix.framework.util.ldap.*" result="org.ops4j.peaberry.util.ldap.@1"/>
      <keep pattern="org.ops4j.**"/>
    </jarjar>
  </target>

  <target name="jar" depends="with.deps,common.jar">
    <makeurl property="deploy.urls">
      <fileset dir="${dist}" includes="*.jar"/>
    </makeurl>
  </target>

  <target name="all">
    <antcall target="${target}"/>
    <ant target="${target}" dir="extensions/eclipse" inheritAll="false"/>
    <ant target="${target}" dir="extensions/lifecycle" inheritAll="false"/>
  </target>

</project>
